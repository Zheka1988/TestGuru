<!DOCTYPE html>
<html>
  <head>
    <title>TestGuru</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if logged_in? %>
      <p class ="nav user">Welcome, <b><%=current_user.email %></b> <%= link_to 'Guru', tests_path %></p>
      <%= render 'shared/header_in' %>
    <% else %>
      <%= render 'shared/header_out' %>
    <% end %>


    <%= yield %>

    <%= render 'shared/footer' %>
  </body>
</html>
