<h2>All tests</h2>
<%= link_to 'Create New Test', new_test_path %>
<table>
  <tr>
    <th>Title</th>
    <th>Level</th>
    <th>Author</th>
    <th>Count_Q</th>
    <th colspan="3">Action</th>
  </tr>
  <% @tests.each do |test| %>
  <tr>
    <td> <%= test.title %> </td>
      <td> <%= test.level %> </td>
      <% author = User.find(test.author_id) %>
      <td> <%= author.name %> </td>
      <td> <%= test.questions.count %></td>
      <td> <%=link_to "Edit",  edit_test_path(test) %></td>
      <td> <%= link_to "Show", test_path(test) %></td>
      <td> <%= link_to "Delete",
                    test_path(test),
                    method: :delete,
                    data: { confirm: 'Areyou sure?' } %></td>
  </tr>
  <% end %>
</table>




